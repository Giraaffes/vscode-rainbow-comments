{
  "name": "vscode-rainbow-comments",
  "version": "1.0.2",
  "displayName": "Rainbow Comments",
  "description": "Really very simple VSCode extension for structuring code with comments",
  "icon": "icon.png",
  "author": "Giraaffes",
  "repository": "github:Giraaffes/vscode-rainbow-comments",

  "engines": {
    "vscode": "^1.98.0"
  },
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],

  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "npx vsce package"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "typescript": "^5.7.3",
    "@vscode/vsce": "^3.3.0"
  }
}
